@model proyecto_2024.Models.Bomberos

@{
    ViewData["Title"] = "Eliminar Registro";
}

<div class="container-fluid px-4 py-3">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h1 class="card-title mb-0">
                <i class="bi bi-trash me-2"></i>Eliminar Registro
            </h1>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                ¿Estás seguro de que deseas eliminar este registro? Esta acción no se puede deshacer.
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-person me-2"></i>Nombre
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-geo-alt me-2"></i>Dirección
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-credit-card me-2"></i>DUI
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Dui)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-file-text me-2"></i>Descripción del Caso
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DescripcionCaso)
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Eliminar" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Confirmar Eliminación
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>