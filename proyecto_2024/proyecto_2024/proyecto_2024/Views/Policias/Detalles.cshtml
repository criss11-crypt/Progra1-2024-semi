@model proyecto_2024.Models.Policia

@{
    ViewData["Title"] = "Detalles del Registro";
}

<div class="container-fluid px-4 py-3">
    <div class="card">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h1 class="card-title mb-0">
                <i class="bi bi-eye me-2"></i>Detalles del Registro
            </h1>
            <div>
                <a asp-action="Editar" asp-route-id="@Model?.Id" class="btn btn-light btn-sm me-2">
                    <i class="bi bi-pencil me-1"></i>Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="bi bi-list me-1"></i>Volver a Lista
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-person me-2"></i>Nombre
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-geo-alt me-2"></i>Dirección
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-credit-card me-2"></i>DUI
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Dui)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-file-text me-2"></i>Descripción del Caso
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DescripcionCaso)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
