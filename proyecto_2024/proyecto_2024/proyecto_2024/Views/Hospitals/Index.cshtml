@model IEnumerable<proyecto_2024.Models.Hospital>

@{
    ViewData["Title"] = "Alerta Hospital";
}

<div class="container-fluid px-4 py-3">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="card-title mb-0">Alerta Hospital</h1>
            <a asp-action="Crear" class="btn btn-light">
                <i class="bi bi-plus-circle me-2"></i>Crear Nuevo
            </a>
        </div>
        <div class="card-body">
            <form method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" name="buscar" class="form-control" placeholder="Buscar..." value="@ViewData["buscar"]" />
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-search me-2"></i>Buscar
                    </button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Dirección</th>
                            <th>DUI</th>
                            <th>Descripción del Caso</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)

                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Direccion</td>
                                <td>@item.Dui</td>
                                <td>@item.DescripcionCaso</td>
                                <td>
                                    <div class="d-flex">
                                        <a asp-action="Editar" class="btn btn-warning btn-sm btn-action me-2" asp-route-id="@item.Id">
                                            <i class="bi bi-pencil"></i>Editar
                                        </a>
                                        <a asp-action="Detalles" class="btn btn-info btn-sm btn-action me-2" asp-route-id="@item.Id">
                                            <i class="bi bi-eye"></i>Detalles
                                        </a>
                                        <a asp-action="Eliminar" class="btn btn-danger btn-sm btn-action me-2" asp-route-id="@item.Id">
                                            <i class="bi bi-trash"></i>Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div><